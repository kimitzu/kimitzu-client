{
  "name": "djali-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@celebryts/react-autocomplete-tags": "^1.0.0",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/qrcode.react": "^0.8.2",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/react-star-rating-component": "^1.4.0",
    "@types/react-tagsinput": "^3.19.3",
    "axios": "^0.18.0",
    "babel-jest": "24.7.1",
    "classnames": "^2.2.6",
    "create-react-class": "^15.6.3",
    "cross-env": "^5.2.0",
    "currency-symbol-map": "^4.0.4",
    "electron-is-dev": "^1.1.0",
    "is-electron": "^2.2.0",
    "iso-639-1": "^2.0.5",
    "moment": "^2.24.0",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.6",
    "react-country-flag": "^1.0.2",
    "react-dnd": "5.0.0",
    "react-dnd-html5-backend": "3.0.2",
    "react-dom": "^16.3.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0",
    "react-select": "^3.0.4",
    "react-select-search": "^0.9.6",
    "react-slider": "^0.11.2",
    "react-star-rating-component": "^1.4.1",
    "react-tag-autocomplete": "^5.11.1",
    "react-tag-input": "^6.4.0",
    "react-tagsinput": "^3.19.0",
    "react-textarea-autosize": "^7.1.0",
    "react-token-autocomplete": "^0.5.3",
    "search-index": "^1.0.6",
    "slugify": "^1.3.4",
    "spinkit": "^1.2.5",
    "typescript": "^3.4.5",
    "uikit": "^3.1.4",
    "use-force-update": "^1.0.6"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "start:develop": "cross-env REACT_APP_ENVIRONMENT=development yarn start",
    "start:stage": "cross-env REACT_APP_ENVIRONMENT=staging yarn start",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "cross-env REACT_APP_LINK=local yarn react-build",
    "build:local": "cross-env REACT_APP_LINK=local yarn react-build && yarn electron-build",
    "build:remote": "cross-env REACT_APP_LINK=remote yarn react-build",
    "cpext": "cp -r external/ build/external/ && mv build/external/_root/locationmap.json build/locationmap.json && mv build/external/_root/locdat.zip build/locdat.zip",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx} --fix --format verbose"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "wait-on": "^3.3.0"
  },
  "description": "Djali Client App",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.djali.client",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "compression": "store",
    "extraFiles": [
      {
        "from": "external/_root/locationmap.json",
        "to": "locationmap.json"
      },
      {
        "from": "external/_root/locdat.zip",
        "to": "locdat.zip"
      },
      {
        "from": "external",
        "to": "external",
        "filter": "*"
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
